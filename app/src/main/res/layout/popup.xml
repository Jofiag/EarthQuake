<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/popupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/more_information"/>

            <Button
                android:id="@+id/closePopBtn"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/listTitle"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/listTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_title"
                android:textSize="17sp"
                android:layout_below="@+id/popupTitle"/>

            <TextView
                android:id="@+id/listOfCities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cities"
                android:layout_below="@+id/listTitle" />

            <WebView
                android:id="@+id/htmlWebView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/listOfCities"/>

            <Button
                android:id="@+id/dismissPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/listOfCities"/>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>